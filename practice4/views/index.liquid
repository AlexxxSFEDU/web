{% extends 'layout' %}

{% block content %}
  <h1>Movie Catalog</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for movie in movies %}
        <tr>
          <td>{{ movie.title }}</td>
          <td>
            <a href="/movies/{{ movie.id }}/edit" class="btn btn-primary btn-sm">Edit</a>
            <a href="/movies/{{ movie.id }}/delete" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <form action="/movies" method="post" class="form-inline">
    <div class="form-group mr-2">
      <input type="text" name="title" class="form-control" placeholder="Enter movie title" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Movie</button>
  </form>
{% endblock %}